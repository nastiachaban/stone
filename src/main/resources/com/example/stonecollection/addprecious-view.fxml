<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.stonecollection.AddPreciousController">

      <GridPane prefHeight="400.0" prefWidth="400.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />

        </rowConstraints>
          <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="150.0" text="Enter data" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER">
            <font>
               <Font size="16.0" />
            </font></Label>

          <Label alignment="CENTER" prefHeight="37.0" prefWidth="200.0" text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <font>
               <Font size="14.0" />
            </font></Label>
          <Label alignment="CENTER" prefHeight="37.0" prefWidth="200.0" text="Weight" GridPane.columnIndex="0" GridPane.rowIndex="2">
              <font>
                  <Font size="14.0" />
              </font></Label>

          <Label alignment="CENTER" prefHeight="37.0" prefWidth="200.0" text="Price" GridPane.columnIndex="0" GridPane.rowIndex="3">
              <font>
                  <Font size="14.0" />
              </font></Label>

          <Label alignment="CENTER" prefHeight="37.0" prefWidth="200.0" text="Color" GridPane.columnIndex="0" GridPane.rowIndex="4">
              <font>
                  <Font size="14.0" />
              </font></Label>

          <Label alignment="CENTER" prefHeight="37.0" prefWidth="200.0" text="Rarity" GridPane.columnIndex="0" GridPane.rowIndex="5">
              <font>
                  <Font size="14.0" />
              </font></Label>

          <TextField fx:id="nameTxt" alignment="CENTER" prefHeight="35.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
               <Font size="14.0" />
            </font></TextField>

          <TextField fx:id="weightTxt" alignment="CENTER" prefHeight="35.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
              <font>
                  <Font size="14.0" />
              </font></TextField>
          <TextField fx:id="priceTxt" alignment="CENTER" prefHeight="35.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
              <font>
                  <Font size="14.0" />
              </font></TextField>
         <ComboBox fx:id="colorBox" prefHeight="31.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <ComboBox fx:id="rarityBox" prefHeight="35.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <Button mnemonicParsing="false" onAction="#onSaveClick" prefHeight="30.0" prefWidth="93.0" text="Save" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
         <Button mnemonicParsing="false" onAction="#onCancelClick" prefHeight="30.0" prefWidth="93.0" text="Cancel" GridPane.halignment="CENTER" GridPane.rowIndex="6" />

      </GridPane>




</AnchorPane>
